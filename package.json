{
  "name": "socialnetwork",
  "version": "1.0.0",
  "description": "Track your health and visualize datapoints through different graphs",
  "main": "server.js",
  "scripts": {
    "update:packages": "node wipe-dependencies.js && rm -rf node_modules && npm update --save-dev && npm update --save",
    "start": "node server",
    "server": "nodemon server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run client\" \"npm run server\" ",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "proxy": "http://localhost:3000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abalmeo/socialnetwork.git"
  },
  "author": "Alvin Balmeo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abalmeo/socialnetwork/issues"
  },
  "homepage": "https://github.com/abalmeo/socialnetwork",
  "dependencies": {
    "@types/react-redux": "^7.1.2",
    "bcryptjs": "^2.4.3",
    "config": "^3.2.2",
    "express": "^4.17.1",
    "express-validator": "^5.3.1",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.5",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "eslint-plugin-react-hooks": "^1.7.0",
    "nodemon": "^1.19.2"
  }
}
